# file options

--exclude .build,Sources/RetroSwift/Documentation.docc

# format options

--allman false
--binarygrouping 4,8
--commas always
--comments indent
--decimalgrouping 3,6
--elseposition same-line
--empty void
--exponentcase lowercase
--exponentgrouping disabled
--fractiongrouping disabled
--header ignore
--hexgrouping 4,8
--hexliteralcase uppercase
--ifdef indent
--indent 4
--indentcase false
--importgrouping length
--linebreaks lf
--maxwidth 180
--octalgrouping 4,8
--operatorfunc spaced
--patternlet hoist
--ranges spaced
--self init-only
--semicolons inline
--stripunusedargs closure-only
--swiftversion 5.7
--trimwhitespace always
--wrapparameters before-first
--wraparguments before-first
--wrapcollections before-first

--enable acronyms,blockcomments,isempty,blankLinesBetweenImports,wrapEnumCases
--disable wrapMultilineStatementBraces
